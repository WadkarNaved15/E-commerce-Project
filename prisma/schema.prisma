generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  role      String   @default("user")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  category    Category
  description String
  features    String[]
  images      String[]
  sizes       String[]
  rating      Float
  popularity  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Category {
  Earings
  Rings
  Necklace
}

