generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("user") 
  createdAt DateTime @default(now())
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  price       Float
  category    Category
  description String
  features    String[]   // stores as text[] in Postgres
  images      String[]   // multiple image URLs
  sizes       String[]   // XS, S, M, etc.
  rating      Float
  popularity  Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum Category {
  Dresses
  Accessories
  Shoes
  Tops
  Bottoms
}